<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BagActivity"
    android:background="@drawable/market"
    >

    <Button
        android:id="@+id/btn_back_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="20dp"
        android:textColor="#FDFCFC"
        android:background="#C9232323"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <ListView
        android:id="@+id/list_view_bag"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_bag"

        app:layout_constraintVertical_bias="0.175" />

    <TextView
        android:id="@+id/textView_bag_dialog"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:text="确定要打开盲盒吗？"
        android:textSize="18sp"
        android:textColor="#FDFCFC"
        android:background="#C9232323"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <Button
        android:id="@+id/btn_bag_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="确定"
        android:visibility="invisible"
        android:background="#C1787676"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView_bag_dialog"
        app:layout_constraintStart_toStartOf="@+id/textView_bag_dialog"
        app:layout_constraintTop_toTopOf="@+id/textView_bag_dialog"
        app:layout_constraintVertical_bias="0.853" />

    <Button
        android:id="@+id/btn_bag_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:background="#C1787676"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/textView_bag_dialog"
        app:layout_constraintEnd_toEndOf="@+id/textView_bag_dialog"
        app:layout_constraintHorizontal_bias="0.287"
        app:layout_constraintStart_toEndOf="@+id/btn_bag_yes"
        app:layout_constraintTop_toTopOf="@+id/textView_bag_dialog"
        app:layout_constraintVertical_bias="0.853" />

</androidx.constraintlayout.widget.ConstraintLayout>